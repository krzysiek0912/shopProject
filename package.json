{
  "name": "shop_project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "installall": "yarn install && npm-run-all -p -l installall:*",
    "installall:client": "cd client && yarn install",
    "installall:server": "cd server && yarn install",
    "start": "cd server && yarn start",
    "startdev": "npm-run-all -p -l startdev:*",
    "startdev:server": "cd server && yarn start",
    "startdev:client": "cd client && yarn start",
    "buildclient": "cd client && yarn build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "helmet": "^3.21.2",
    "js-sha256": "^0.9.0",
    "mongoose": "^5.7.13",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "eslint": "6.1.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.0.0-beta.5",
    "lint-staged": "^9.4.2",
    "npm": "^6.14.6",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "git add"
    ]
  }
}
